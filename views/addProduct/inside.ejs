<!-- MAIN -->
<style>
  td input,
  .category,
  textarea {
    width: 180px;
    height: 50px;
    color: black;
    font-size: 20px;
    border: 1px solid #3c91e6;
    padding: 10px;
  }
  textarea {
    resize: none;
    height: 100px;
  }

  form .submit {
    width: 40%;
    height: 50px;

    background-color: #3c91e6;
    color: black;
    font-size: 20px;
    font-weight: bold;
    margin-right: 30px;
  }
</style>
<main>
  <div class="table-data">
    <div class="order">
      <div class="head">
        <h2>add product</h2>
      </div>
      <form
        action="/product/addProduct"
        ,
        method="post"
        ,
        enctype="multipart/form-data"
      >
        <table>
          <tbody>
            <tr class="image-row">
              <td>
                <label for="">add img file: </label>
              </td>
              <td>
                <input
                  class="file-uplode-input"
                  type="file"
                  name="image"
                  required
                />
              </td>

              <td><p>choose an img in type of jpg</p></td>
            </tr>

            <tr class="price-row">
              <td>
                <label for="">add the product price: </label>
              </td>
              <td>
                <input
                  class="price"
                  type="number"
                  name="price"
                  required
                  min="1"
                />
                EGP
              </td>
              <td><p>the price has no floating point.</p></td>
            </tr>

            <tr class="category-row">
              <td>
                <label for="">Choose Category </label>
              </td>
              <td>
                <select name="category" class="category">
                  <option>Computing</option>
                  <option>Fashion</option>
                  <option>Phones & Tablets</option>
                  <option>Health & Beauty</option>
                  <option>Baby Products</option>
                </select>
              </td>
              <td>
                <div class=""></div>
              </td>
            </tr>

            <tr class="description-row">
              <td>
                <label for="">Add name and description: </label>
              </td>
              <td>
                <textarea
                  name="title"
                  required
                  placeholder="Name and description of  product..."
                ></textarea>
              </td>
              <td>
                <div>
                  <button type="submit" class="submit btn">submit</button>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </form>
    </div>
  </div>
</main>

